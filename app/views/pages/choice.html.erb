
<%= render "shared/navbar" %>


<div class="cards">
  <%= link_to playlist_path(Playlist.first) do %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @playlists[0].image_url %>)">
      Classic
    </div>
  <% end %>
</div>

<div class="cards">
  <%= @playlists.each do |playlist| %>
    <%= link_to playlist_path(playlist) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= playlist.image_url %>)">
        Classic
      </div>
    <% end %>
  <% end %>
</div>

<div class="cards">
  <%= @sudokus.each do |sudoku| %>
    <%= link_to sudoku_path(sudoku) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= sudoku.image_url %>)">
        <%= sudoku.level %>
      </div>
    <% end %>
  <% end %>
</div>
